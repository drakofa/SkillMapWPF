<Page x:Class="SkillMapWPF.Views.AnalystDashboardPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Панель аналитики" Background="#F4F7F9">

    <Page.Resources>
        <Style x:Key="AnalystButtonStyle" TargetType="Button">
            <Setter Property="Height" Value="45"/>
            <Setter Property="Background" Value="#FFFFFF"/>
            <Setter Property="BorderBrush" Value="#3498DB"/>
            <Setter Property="Foreground" Value="#2C3E50"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#EBF5FB"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Page.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="30">
            <TextBlock Text="Аналитическая панель" FontSize="28" FontWeight="Bold" Foreground="#2C3E50" Margin="0,0,0,10"/>

            <UniformGrid Columns="2" VerticalAlignment="Top">
                <Border Background="White" Margin="10" Padding="20" CornerRadius="8">
                    <StackPanel>
                        <TextBlock Text="Рынок и Вакансии" FontSize="18" FontWeight="SemiBold" Margin="0,0,0,15"/>
                        <Button Content="Топ-20 популярных вакансий" Style="{StaticResource AnalystButtonStyle}" Click="TopPopular_Click"/>
                        <Button Content="Топ-10 высокооплачиваемых" Style="{StaticResource AnalystButtonStyle}" Click="HighSalary_Click" Margin="0,10,0,0"/>
                    </StackPanel>
                </Border>
                <Border Background="White" Margin="10" Padding="20" CornerRadius="8" BorderThickness="1" BorderBrush="#DCDDE1">
                    <StackPanel>
                        <TextBlock Text="Рынок и Зарплаты" FontSize="18" FontWeight="SemiBold" Margin="0,0,0,15" Foreground="#E67E22"/>
                        <Button Content="Топ-20 популярных вакансий" Style="{StaticResource AnalystButtonStyle}" Click="TopPopular_Click"/>
                        <Button Content="Топ-10 высокооплачиваемых" Style="{StaticResource AnalystButtonStyle}" Click="HighSalary_Click" Margin="0,10,0,0"/>
                    </StackPanel>
                </Border>

                <Border Background="White" Margin="10" Padding="20" CornerRadius="8" BorderThickness="1" BorderBrush="#DCDDE1">
                    <StackPanel>
                        <TextBlock Text="Активность системы" FontSize="18" FontWeight="SemiBold" Margin="0,0,0,15" Foreground="#8E44AD"/>
                        <Button Content="Статистика активных пользователей" Style="{StaticResource AnalystButtonStyle}" Click="UserStats_Click"/>
                        <Button Content="Эффективность откликов" Style="{StaticResource AnalystButtonStyle}" Click="ApplicationAnalysis_Click" Margin="0,10,0,0"/>
                    </StackPanel>
                </Border>
            </UniformGrid>
        </StackPanel>
    </ScrollViewer>
</Page>