<Page x:Class="SkillMapWPF.Views.CreateCompanyPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Регистрация компании" Background="#F0F2F5">

    <Grid VerticalAlignment="Center" HorizontalAlignment="Center">
        <Border Background="White" CornerRadius="15" Padding="30" Width="400" BorderThickness="1" BorderBrush="#DCDDE1">
            <StackPanel>
                <TextBlock Text="Новая компания" FontSize="24" FontWeight="Bold" Margin="0,0,0,20" HorizontalAlignment="Center"/>

                <Label Content="Название организации"/>
                <TextBox x:Name="TxtCompanyName" Height="35" Margin="0,0,0,15"/>

                <Label Content="ИНН (10-12 цифр)"/>
                <TextBox x:Name="TxtTaxNumber" Height="35" Margin="0,0,0,15" MaxLength="12"/>

                <Label Content="Сфера деятельности"/>
                <ComboBox x:Name="CbCompanyType" Height="35" Margin="0,0,0,25">
                    <ComboBoxItem Content="ИТ"/>
                    <ComboBoxItem Content="Финансы"/>
                    <ComboBoxItem Content="Маркетинг"/>
                    <ComboBoxItem Content="Производство"/>
                    <ComboBoxItem Content="Торговля"/>
                    <ComboBoxItem Content="Услуги"/>
                </ComboBox>

                <Button Content="Создать профиль компании" Height="45" Background="#3498DB" Foreground="White" 
                        FontWeight="Bold" Click="CreateCompany_Click">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="5"/>
                        </Style>
                    </Button.Resources>
                </Button>

                <Button Content="Отмена" Margin="0,10,0,0" Background="Transparent" BorderThickness="0" Click="Cancel_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</Page>