<Page x:Class="SkillMapWPF.Views.CreateResumePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Создание резюме" Background="White">

    <Grid Margin="30">
        <StackPanel MaxWidth="500" HorizontalAlignment="Left">
            <TextBlock Text="Новое резюме" FontSize="24" FontWeight="Bold" Margin="0,0,0,20" Foreground="#2C3E50"/>

            <Label Content="Специальность (напр. C# Разработчик)"/>
            <TextBox x:Name="TxtSpecialty" Height="30" Margin="0,0,0,15"/>

            <Label Content="О себе / Описание опыта"/>
            <TextBox x:Name="TxtDescription" Height="100" TextWrapping="Wrap" AcceptsReturn="True" Margin="0,0,0,15"/>

            <Label Content="Опыт работы (полных лет)"/>
            <TextBox x:Name="TxtExperience" Height="30" Margin="0,0,0,15"/>

            <Label Content="Желаемая зарплата (руб.)"/>
            <TextBox x:Name="TxtSalary" Height="30" Margin="0,0,0,25"/>

            <StackPanel Orientation="Horizontal">
                <Button Content="Опубликовать" Width="150" Height="40" Background="#2ECC71" Foreground="White" Click="SaveResume_Click"/>
                <Button Content="Отмена" Width="100" Height="40" Margin="15,0,0,0" Click="Cancel_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>