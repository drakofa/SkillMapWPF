<Page x:Class="SkillMapWPF.Views.CreateVacancyPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Создание вакансии" Background="#F4F7F9">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Border Background="White" CornerRadius="10" Margin="30" Padding="25" MaxWidth="650" HorizontalAlignment="Center">
            <Border.Effect>
                <DropShadowEffect BlurRadius="20" Direction="320" ShadowDepth="3" Opacity="0.1" Color="Black"/>
            </Border.Effect>

            <StackPanel>
                <TextBlock Text="Публикация новой вакансии" FontSize="26" FontWeight="Bold" Margin="0,0,0,5" Foreground="#2C3E50"/>
                <TextBlock Text="Заполните данные ниже. Вакансия будет привязана к вашей компании." FontSize="14" Foreground="#7F8C8D" Margin="0,0,0,25"/>

                <Label Content="Название должности" FontWeight="SemiBold"/>
                <TextBox x:Name="TxtTitle" Height="35" Margin="0,5,0,15" VerticalContentAlignment="Center" Padding="5,0"/>

                <Label Content="Описание (требования и условия)" FontWeight="SemiBold"/>
                <TextBox x:Name="TxtDescription" Height="120" TextWrapping="Wrap" AcceptsReturn="True" Margin="0,5,0,15" Padding="5"/>

                <UniformGrid Columns="2" Margin="0,0,0,15">
                    <StackPanel Margin="0,0,10,0">
                        <Label Content="Мин. зарплата (руб)" FontWeight="SemiBold"/>
                        <TextBox x:Name="TxtMinSalary" Height="35" VerticalContentAlignment="Center" Padding="5,0"/>
                    </StackPanel>
                    <StackPanel Margin="10,0,0,0">
                        <Label Content="Макс. зарплата (руб)" FontWeight="SemiBold"/>
                        <TextBox x:Name="TxtMaxSalary" Height="35" VerticalContentAlignment="Center" Padding="5,0"/>
                    </StackPanel>
                </UniformGrid>

                <UniformGrid Columns="2" Margin="0,0,0,15">
                    <StackPanel Margin="0,0,10,0">
                        <Label Content="Опыт работы (лет)" FontWeight="SemiBold"/>
                        <TextBox x:Name="TxtExperience" Height="35" VerticalContentAlignment="Center" Padding="5,0"/>
                    </StackPanel>
                    <StackPanel Margin="10,0,0,0">
                        <Label Content="Город" FontWeight="SemiBold"/>
                        <TextBox x:Name="TxtLocation" Height="35" VerticalContentAlignment="Center" Padding="5,0"/>
                    </StackPanel>
                </UniformGrid>

                <Label Content="Параметры работы" FontWeight="SemiBold" Margin="0,10,0,5"/>
                <Grid Margin="0,0,0,25">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" Margin="0,0,5,0">
                        <TextBlock Text="Тип занятости" FontSize="11" Foreground="#95A5A6"/>
                        <ComboBox x:Name="CbEmploymentType" Height="35">
                            <ComboBoxItem Content="Полная занятость" IsSelected="True"/>
                            <ComboBoxItem Content="Частичная занятость"/>
                            <ComboBoxItem Content="Проектная работа"/>
                        </ComboBox>
                    </StackPanel>

                    <StackPanel Grid.Column="1" Margin="5,0,5,0">
                        <TextBlock Text="График" FontSize="11" Foreground="#95A5A6"/>
                        <ComboBox x:Name="CbWorkSchedule" Height="35">
                            <ComboBoxItem Content="Полный день" IsSelected="True"/>
                            <ComboBoxItem Content="Гибкий график"/>
                            <ComboBoxItem Content="Сменный график"/>
                        </ComboBox>
                    </StackPanel>

                    <StackPanel Grid.Column="2" Margin="5,0,0,0">
                        <TextBlock Text="Формат" FontSize="11" Foreground="#95A5A6"/>
                        <ComboBox x:Name="CbWorkFormat" Height="35">
                            <ComboBoxItem Content="Офис" IsSelected="True"/>
                            <ComboBoxItem Content="Удаленная работа"/>
                            <ComboBoxItem Content="Гибрид"/>
                        </ComboBox>
                    </StackPanel>
                </Grid>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                    <Button Content="Отмена" Width="100" Height="40" Margin="0,0,15,0" Background="#BDC3C7" BorderThickness="0" Click="Cancel_Click"/>
                    <Button Content="Опубликовать" Width="160" Height="40" Background="#27AE60" Foreground="White" FontWeight="Bold" BorderThickness="0" Click="SaveVacancy_Click"/>
                </StackPanel>
            </StackPanel>
        </Border>
    </ScrollViewer>
</Page>