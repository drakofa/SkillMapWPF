<Page x:Class="SkillMapWPF.Views.LoginRegisterPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Login &amp; Register"
      Background="#F0F2F5">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0" Margin="30">
            <TextBlock Text="Регистрация" FontSize="20" FontWeight="Bold" Margin="0,0,0,20"/>

            <Label Content="Имя"/>
            <TextBox x:Name="RegisterFirstName" Height="30" Margin="0,0,0,10"/>

            <Label Content="Фамилия"/>
            <TextBox x:Name="RegisterLastName" Height="30" Margin="0,0,0,10"/>

            <Label Content="Email"/>
            <TextBox x:Name="RegisterEmail" Height="30" Margin="0,0,0,10"/>

            <Label Content="Телефон"/>
            <TextBox x:Name="RegisterPhone" Height="30" Margin="0,0,0,10"/>

            <Label Content="Пароль"/>
            <TextBox x:Name="RegisterPassWord" Height="30" Margin="0,0,0,20"/>

            <Label Content="Кто вы?"/>
            <ComboBox x:Name="RoleComboBox" Height="30" Margin="0,0,0,20" SelectedIndex="0" SelectedValuePath="Tag">
                <ComboBoxItem Content="Соискатель" Tag="SEEKER"/>
                <ComboBoxItem Content="Работодатель / Создатель компании" Tag="CREATOR"/>
                <ComboBoxItem Content="HR-менеджер" Tag="HR"/>
                <ComboBoxItem Content="Аналитик" Tag="ANALYST"/>
            </ComboBox>

            <Button Content="Зарегистрироваться" Height="45" Background="#2ECC71" Foreground="White" Click="RegisterButton_Click"/>
        </StackPanel>

        <StackPanel Grid.Column="1" Margin="30" VerticalAlignment="Center">
            <Border Background="White" CornerRadius="10" Padding="20">
                <StackPanel>
                    <TextBlock Text="Вход в систему" FontSize="20" FontWeight="Bold" Margin="0,0,0,20"/>

                    <Label Content="Email"/>
                    <TextBox x:Name="LoginEmail" Height="30" Margin="0,0,0,10"/>

                    <Label Content="Пароль"/>
                    <TextBox x:Name="LoginPassword" Height="30" Margin="0,0,0,20"/>

                    

                    <Button Content="Войти" Height="45" Background="#3498DB" Foreground="White" Click="LoginButton_Click"/>
                </StackPanel>
            </Border>
        </StackPanel>
    </Grid>
</Page>