<Page x:Class="SkillMapWPF.Views.ReportViewerPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Просмотр отчета" Background="White">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock x:Name="TxtReportTitle" Text="Отчет" FontSize="22" FontWeight="Bold" Foreground="#2C3E50"/>
            <Separator Margin="0,10,0,0"/>
        </StackPanel>

        <DataGrid Grid.Row="1" x:Name="DgReport" 
                  AutoGenerateColumns="True" 
                  IsReadOnly="True" 
                  Background="Transparent"
                  BorderThickness="1"
                  BorderBrush="#DCDDE1"
                  AlternatingRowBackground="#F9F9F9"
                  FontSize="13">
            <DataGrid.ColumnHeaderStyle>
                <Style TargetType="DataGridColumnHeader">
                    <Setter Property="FontWeight" Value="Bold"/>
                    <Setter Property="Padding" Value="5"/>
                </Style>
            </DataGrid.ColumnHeaderStyle>
        </DataGrid>

        <Button Grid.Row="2" Content="Назад к панели" Width="150" Height="35" 
                HorizontalAlignment="Left" Margin="0,20,0,0" Click="Back_Click"/>
    </Grid>
</Page>