<Page x:Class="SkillMapWPF.Views.VacanciesPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Доступные вакансии">
    <Grid Background="#F0F2F5">
        <StackPanel Margin="20">
            <DockPanel LastChildFill="False" Margin="0,0,0,20">
                <TextBlock Text="Актуальные вакансии" FontSize="26" FontWeight="ExtraBold" Foreground="#2C3E50" DockPanel.Dock="Left"/>
                
                <Button x:Name="BtnCreateResume" 
                        Content="Создать резюме" 
                        Width="150" 
                        Height="35" 
                        Background="#3498DB" 
                        Foreground="White" 
                        FontWeight="Bold"
                        Click="CreateResume_Click" 
                        DockPanel.Dock="Right">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="5"/>
                        </Style>
                    </Button.Resources>
                </Button>
            </DockPanel>

            <ScrollViewer Height="320" VerticalScrollBarVisibility="Auto">
                <StackPanel x:Name="VacanciesContainer">
                </StackPanel>
            </ScrollViewer>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,15,0,0">
                <Button x:Name="BtnBack" Content="Предыдущая" Width="120" Height="35" Click="Prev_Click" Margin="10"/>
                <TextBlock x:Name="TxtPageInfo" Text="Стр. 1" VerticalAlignment="Center" FontSize="14" FontWeight="SemiBold"/>
                <Button x:Name="BtnNext" Content="Следующая" Width="120" Height="35" Click="Next_Click" Margin="10"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>